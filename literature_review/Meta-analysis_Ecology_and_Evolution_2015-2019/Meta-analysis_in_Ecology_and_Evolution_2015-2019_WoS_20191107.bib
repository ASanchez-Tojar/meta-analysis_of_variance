@article{ ISI:000446144100007,
Author = {Aliyu, Garba and Sanz-Cobena, Alberto and Mueller, Christoph and Zaman,
   Mohammad and Luo, Jiafa and Liu, Deyan and Yuan, Junji and Chen,
   Zengming and Niu, Yuhui and Arowolo, Aisha and Ding, Weixin},
Title = {{A meta-analysis of soil background N2O emissions from croplands in China
   shows variation among climatic zones}},
Journal = {{AGRICULTURE ECOSYSTEMS \& ENVIRONMENT}},
Year = {{2018}},
Volume = {{267}},
Pages = {{63-73}},
Month = {{NOV 15}},
Abstract = {{Nitrous oxide (N2O) is one of the most important and persistent
   greenhouse gases, however, there is a lack of accurate data on soil
   background N2O emissions (BNE) from agricultural land. Calculations of
   N2O emission factors from land uses are currently based on a single,
   universal BNE value advocated by the International Panel on Climate
