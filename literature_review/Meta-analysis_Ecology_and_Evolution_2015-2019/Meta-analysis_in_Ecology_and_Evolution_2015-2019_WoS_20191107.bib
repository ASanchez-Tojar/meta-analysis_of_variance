@article{ ISI:000371515300005,
Author = {Zhao, Xin and Liu, Sheng-Li and Pu, Chao and Zhang, Xiang-Qian and Xue,
   Jian-Fu and Zhang, Ran and Wang, Yu-Qiao and Lal, Rattan and Zhang,
   Hai-Lin and Chen, Fu},
Title = {{Methane and nitrous oxide emissions under no-till farming in China: a
