@article{ ISI:000384383600021,
Author = {Talle, Malin and Deak, Balazs and Poschlod, Peter and Valko, Orsolya and
   Westerberg, Lars and Milberg, Per},
Title = {{Grazing vs. mowing: A meta-analysis of biodiversity benefits for
